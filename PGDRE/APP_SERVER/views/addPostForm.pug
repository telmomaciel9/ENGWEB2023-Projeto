extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Formulário dos Posts
        .w3-right
          a.w3-margin.w3-large(href="/home") Home
            img.w3-margin(src="/images/home.png" alt="home icon" width="40" height="40")
          a.w3-margin.w3-large(href="/resources") Recursos
            img.w3-margin(src="/images/resources.png" alt="resources icon" width="40" height="40")
          a.w3-margin.w3-large(href="/profile") Perfil
            img.w3-margin(src="/images/profile.png" alt="profile icon" width="40" height="40")
          a.w3-margin.w3-large(href="/logout") Logout  
            img.w3-margin(src="/images/logout.png" alt="logout icon" width="40" height="40")

    .w3-container  
      .w3-container.w3-border.w3-margin
        h2 Informação do Recurso Educativo
        ul.w3-ul
          li #[b Resource Name: ] #{r.resourceName}
          li #[b Title: ] #{r.title}
          li #[b Subtitle: ] #{r.subtitle}
          li #[b Type: ] #{r.type}
          li #[b Author: ] #{r.author}
          li #[b Submissor: ] #{r.submitter}

      h2 Adicione o Post:
      form.w3-container(action="/resources/" + r.resourceName + "/posts/add" method="POST")
        fieldset
            input.w3-input(type="hidden" name="resourceName" value=r.resourceName)
            input.w3-input(type="hidden" name="username" value=u.username)
            input.w3-input(type="hidden" name="visibility" value=r.visibility)
            legend Detalhes:
            label Título
            input.w3-input.w3-border.w3-round.w3-light-grey(type="text" name="title")
            label Descrição
            input.w3-input.w3-border.w3-round.w3-light-grey(type="text" name="description")

        input.w3-btn.w3-green.w3-margin(type="submit" value="Submissão do Post!")
        button.w3-btn.w3-round.w3-red.w3-margin
          a(href="/resources/" + r.resourceName) Cancelar 

    footer.w3-container.w3-blue
      address Generated in PGDRE at #{d} #[a#home(href="/home") Go back to home!]